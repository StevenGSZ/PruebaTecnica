@model IEnumerable<PruebaTecnica.Models.Departamento>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/css/departamentos.css" rel="stylesheet" />
</head>
<body>
    <div class="barra">
        <h4>Detalles de Departamento </h4> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i></a>
    </div>
    <div class="container">
        <br/>
        <p>
            <a asp-action="Create" class="btn btn-success">Add New</a>
        </p>
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="infoitems">
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="btns">
                            <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdDepartamento">Details</a>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdDepartamento">Edit</a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdDepartamento">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
